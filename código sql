-- =============================================
-- CONSULTAS DE VERIFICA√á√ÉO
-- =============================================

-- Verifica as disciplinas inseridas
SELECT '=== DISCIPLINAS ===' as '';
SELECT * FROM disciplinas;

-- Verifica os projetos inseridos
SELECT '=== PROJETOS ===' as '';
SELECT id, nome, concluido FROM projetos;

-- Estat√≠sticas
SELECT '=== ESTAT√çSTICAS ===' as '';
SELECT 
    (SELECT COUNT(*) FROM disciplinas) as total_disciplinas,
    (SELECT COUNT(*) FROM projetos) as total_projetos,
    (SELECT COUNT(*) FROM projetos WHERE concluido = TRUE) as projetos_concluidos,
    (SELECT COUNT(*) FROM projetos WHERE concluido = FALSE) as projetos_andamento;

